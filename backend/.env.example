# Application Settings
APP_NAME=DDoS Prevention System
APP_VERSION=1.0.0
DEBUG=True

# Database Configuration
# Update these values based on your PostgreSQL setup
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ddos_db

# Security
SECRET_KEY=change-this-to-a-secure-random-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting Configuration
DEFAULT_MAX_REQ_PER_SEC=10
DEFAULT_MAX_REQ_PER_MIN=100
DEFAULT_BLOCK_DURATION=300
DEFAULT_ANOMALY_THRESHOLD=5000

# Redis (Optional - for distributed rate limiting)
# REDIS_URL=redis://localhost:6379/0
# USE_REDIS=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/traffic.log

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
